<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Img</th>
      <th>Event type</th>
      <th>Start date</th>
      <th>End date</th>
      <th>City</th>
      <th>Address</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Volunteer type</th>
      <th>Volunteer gender</th>
      <th>Number needed</th>
      <th>Volunteer skills</th>
      <th>Requirements</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.img %></td>
        <td><%= event.event_type %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.city %></td>
        <td><%= event.address %></td>
        <td><%= event.description %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.volunteer_type %></td>
        <td><%= event.volunteer_gender %></td>
        <td><%= event.number_needed %></td>
        <td><%= event.volunteer_skills %></td>
        <td><%= event.requirements %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

